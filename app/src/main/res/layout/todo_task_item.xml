<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/todo_task_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/todo_task_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Description" />

    <TextView
        android:id="@+id/todo_task_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todo_task_item_description"
        android:text="Task Date" />

    <TextView
        android:id="@+id/todo_task_item_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todo_task_item_date"
        android:text="Task Location" />

    <CheckBox
        android:id="@+id/todo_task_item_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Done"
        android:checked="false"
        />


</RelativeLayout>