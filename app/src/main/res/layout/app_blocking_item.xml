<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/appItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"/>

        <Chronometer
            android:id="@+id/appItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:countDown="true"
            android:layout_toRightOf="@id/appItemName"
            android:textAlignment="viewEnd" />

        <ProgressBar
            android:id="@+id/appItemProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appItemTime"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/appItemStepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/appItemTime"
            android:text="Pedometer"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>