<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationAddLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/locationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/location_label"
        android:textAppearance="@style/labels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/searchBar"
        style="@style/MaterialSearchBarLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationLabel"
        app:mt_hint="Search"
        app:mt_hintColor="#939393"
        app:mt_maxSuggestionsCount="10"
        app:mt_placeholder="Search: e.g. SNU Main Library"
        app:mt_placeholderColor="@color/darker_gray"
        app:mt_searchBarColor="#EFEFEF"
        app:mt_speechMode="false"
        app:mt_textColor="#000000">

    </com.mancj.materialsearchbar.MaterialSearchBar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar">

        <TextView
            android:id="@+id/loc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/loc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF"
            android:padding="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/loc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/loc4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF"
            android:padding="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/loc5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/displayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/display_label"
        android:textAppearance="@style/labels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/displayNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="@string/hint"
        android:inputType="text"
        android:maxLength="17"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayText" />

    <TextView
        android:id="@+id/wordCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_count"
        app:layout_constraintEnd_toEndOf="@+id/displayNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/displayNameEdit" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/time_title"
        android:textAppearance="@style/labels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerDate" />

    <TextView
        android:id="@+id/timeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_title"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/timeText"
        app:layout_constraintTop_toBottomOf="@+id/timeText" />

    <RelativeLayout
        android:id="@+id/dividerTime"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/timeEdit"
        app:layout_constraintStart_toStartOf="@+id/timeEdit"
        app:layout_constraintTop_toBottomOf="@+id/timeEdit" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/date_title"
        android:textAppearance="@style/labels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayNameEdit" />

    <TextView
        android:id="@+id/dateEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/date_title"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/dateText"
        app:layout_constraintTop_toBottomOf="@+id/dateText" />

    <RelativeLayout
        android:id="@+id/dividerDate"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/dateEdit"
        app:layout_constraintStart_toStartOf="@+id/dateEdit"
        app:layout_constraintTop_toBottomOf="@+id/dateEdit">

    </RelativeLayout>

    <TextView
        android:id="@+id/repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/repeat"
        android:textAppearance="@style/labels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerTime" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repeat">

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/toggle_button"
            android:textAllCaps="false"
            android:textColor="@color/darker_gray"
            android:textOff="@string/sun"
            android:textOn="@string/sun" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/toggle_button"
            android:textAllCaps="false"
            android:textColor="@color/darker_gray"
            android:textOff="@string/mon"
            android:textOn="@string/mon" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/toggle_button"
            android:textAllCaps="false"
            android:textColor="@color/darker_gray"
            android:textOff="@string/tue"
            android:textOn="@string/tue" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/toggle_button"
            android:textAllCaps="false"
            android:textColor="@color/darker_gray"
            android:textOff="@string/wed"
            android:textOn="@string/wed" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton5"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/toggle_button"
            android:textAllCaps="false"
            android:textColor="@color/darker_gray"
            android:textOff="@string/thu"
            android:textOn="@string/thu" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/toggle_button"
            android:textAllCaps="false"
            android:textColor="@color/darker_gray"
            android:textOff="@string/fri"
            android:textOn="@string/fri" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton7"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/toggle_button"
            android:textAllCaps="false"
            android:textColor="@color/darker_gray"
            android:textOff="@string/sat"
            android:textOn="@string/sat" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>