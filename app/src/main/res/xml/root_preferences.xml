<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_screen"
    app:icon="@mipmap/ic_launcher_round">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/profile_header">

        <EditTextPreference
            app:dialogTitle="@string/profile_dialog_title"
            app:iconSpaceReserved="false"
            app:key="profile"
            app:title="@string/profile_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="@string/appblock_category_summary"
        app:iconSpaceReserved="false"
        app:title="@string/app_blocking_header">

        <SwitchPreference
            android:defaultValue="true"
            android:selectable="true"
            android:summaryOff="@string/appblock_summary_off"
            android:summaryOn="@string/appblock_summary_on"
            app:iconSpaceReserved="false"
            app:key="@string/appblock"
            app:title="@string/appblock_title" />

        <com.example.bluecatapp.ui.settings.RestrictAppsPreference
            android:defaultValue="@array/empty_array"
            app:iconSpaceReserved="false"
            app:key="restricted_apps"
            app:title="@string/restricted_apps_title" />

        <ListPreference
            android:defaultValue="1800000"
            android:entries="@array/time_limit_entries"
            android:entryValues="@array/time_limit_values"
            android:selectable="true"
            app:dialogTitle="@string/time_limit_title"
            app:iconSpaceReserved="false"
            app:key="time_limit"
            app:title="@string/time_limit_title" />

        <ListPreference

            android:defaultValue="600000"
            android:entries="@array/block_duration_entries"
            android:entryValues="@array/block_duration_values"
            android:selectable="true"
            app:dialogTitle="@string/block_duration_title"
            app:iconSpaceReserved="false"
            app:key="block_duration"
            app:title="@string/block_duration_title" />

        <SwitchPreference
            android:defaultValue="true"
            android:selectable="true"
            app:iconSpaceReserved="false"
            app:key="smart_blocking"
            app:summary="@string/smart_blocking_summary"
            app:title="@string/smart_blocking_title" />

        <SwitchPreference
            android:defaultValue="true"
            android:selectable="true"
            android:summaryOff="@string/pedometer_summary_off"
            android:summaryOn="@string/pedometer_summary_on"
            app:iconSpaceReserved="false"
            app:key="pedometer"
            app:title="@string/pedometer_title" />

        <ListPreference
            android:defaultValue="50"
            android:entries="@array/pedometer_entries"
            android:entryValues="@array/pedometer_values"
            android:selectable="true"
            app:dialogTitle="@string/pedometer_count_title"
            app:iconSpaceReserved="false"
            app:key="pedometer_count"
            app:title="@string/pedometer_count_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="@string/location_summary"
        app:iconSpaceReserved="false"
        app:title="@string/location_reminder_header">

        <SwitchPreference
            android:defaultValue="true"
            android:selectable="true"
            app:iconSpaceReserved="false"
            app:key="@string/enable_location"
            app:title="@string/enable_location" />
            android:defaultValue="false"/>

        <ListPreference
            android:defaultValue="@string/preparation_time_value"
            android:entries="@array/preparation_time_title"
            android:entryValues="@array/preparation_time_values"
            android:selectable="true"
            app:dialogTitle="@string/preparation_time"
            app:iconSpaceReserved="false"
            app:key="@string/preparation_time"
            app:title="@string/preparation_time" />

        <Preference
            android:key="@string/reset_statistic"
            android:selectable="true"
            android:title="@string/reset_statistic"
            app:iconSpaceReserved="false" />


        <SwitchPreference
            android:defaultValue="true"
            android:selectable="true"
            android:summaryOff="No alarm sound"
            android:summaryOn="Alarm will go off when you have to depart. Swipe notification to turn off the alarm."
            app:iconSpaceReserved="false"
            app:key="Enable Alarm Sound"
            app:title="Enable Alarm Sound" />

        <Preference
            android:key="@string/reset_statistic"
            android:selectable="true"
            android:title="@string/reset_statistic"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:summary="@string/hw_summary"
        app:iconSpaceReserved="false"
        app:title="@string/homework_header">

        <!-- TODO should change to production when production build-->
        <!-- HW mode settings -->

        <!--        test -->
        <!--        android:entries="@array/hw_time_entries"-->
        <!--        android:entryValues="@array/hw_time_values"-->
        <ListPreference
            android:defaultValue="10"

            android:entries="@array/hw_time_entries_production"
            android:entryValues="@array/hw_time_values_production"

            android:selectable="true"
            app:dialogTitle="@string/hw_time_title"


            app:iconSpaceReserved="false"
            app:key="@string/hw_time_key"
            app:title="@string/hw_time_title" />


        <!--        test -->
        <!--        android:entries="@array/hw_shake_entries"-->
        <!--        android:entryValues="@array/hw_shake_values"-->
        <ListPreference
            android:defaultValue="5"

            android:entries="@array/hw_shake_entries_production"
            android:entryValues="@array/hw_shake_values_production"


            android:selectable="true"
            app:dialogTitle="@string/hw_shake_val_title"
            app:iconSpaceReserved="false"/>


        <ListPreference
            android:defaultValue="45"
            android:entries="@array/hw_time_entries_production"
            android:entryValues="@array/hw_time_values_production"
            android:selectable="true"
            app:dialogTitle="@string/hw_time_title"
            app:iconSpaceReserved="false"
            app:key="@string/hw_time_key"
            app:title="@string/hw_time_title" />

        <ListPreference
            android:defaultValue="10"
            android:entries="@array/hw_shake_entries_production"
            android:entryValues="@array/hw_shake_values_production"
            android:selectable="true"
            app:dialogTitle="@string/hw_shake_val_title"
            app:iconSpaceReserved="false"
            app:key="@string/hw_shake_val_key"
            app:title="@string/hw_shake_val_title" />

        <SwitchPreference
            android:selectable="true"

            android:summaryOff="@string/hw_pedometer_summary_off"

            android:summaryOn="@string/hw_pedometer_summary_on"

            app:defaultValue="false"
            app:iconSpaceReserved="false"

            app:key="@string/hw_pedometer_bool_key"
            app:title="@string/hw_pedometer_bool_title" />

        <!--        test -->
        <!--        android:entries="@array/hw_pedometer_entries"-->
        <!--        android:entryValues="@array/hw_pedometer_values"-->
        <ListPreference
            android:defaultValue="10"

            android:entries="@array/hw_pedometer_entries_production"
            android:entryValues="@array/hw_pedometer_values_production"

            android:selectable="true"
            app:dialogTitle="@string/hw_pedometer_val_title"

            android:summaryOff="@string/hw_pedometer_summary_off"
            android:summaryOn="@string/hw_pedometer_summary_on"
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="@string/hw_pedometer_bool_key"
            app:title="@string/hw_pedometer_bool_title" />

        <ListPreference
            android:defaultValue="30"
            android:entries="@array/hw_pedometer_entries_production"
            android:entryValues="@array/hw_pedometer_values_production"
            android:selectable="true"
            app:dialogTitle="@string/hw_pedometer_val_title"
            app:iconSpaceReserved="false"
            app:key="@string/hw_pedometer_val_key"
            app:title="@string/hw_pedometer_val_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/general_header">

        <!-- TODO -->

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
